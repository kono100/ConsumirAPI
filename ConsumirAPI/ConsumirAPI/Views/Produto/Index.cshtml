@model List<WebAPI_Swagger.Model.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<h1 class="my-4">@ViewData["Title"]</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Adicionar Produto</a>
</p>

<table class="table table-striped table-hover mt-3">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Nome do Produto</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Nome_Produto</td>
                <td>@produto.Preco</td>
                <td>
                    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@produto.Id">Editar</a>
                    <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@produto.Id">Detalhes</a>
                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@produto.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>