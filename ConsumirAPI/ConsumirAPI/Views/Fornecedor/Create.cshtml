@model WebAPI_Swagger.Model.Fornecedor

@{
    ViewData["Title"] = "Cadastrar Fornecedor";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-controller="Fornecedor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contato" class="control-label"></label>
                <input asp-for="Contato" class="form-control" />
                <span asp-validation-for="Contato" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Produtos" class="control-label"></label>
                <input asp-for="Produtos" class="form-control" />
                <span asp-validation-for="Produtos" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Inserir" class="btn btn-primary btn-sm" />
                <a class="btn btn-secondary btn-sm text-white" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
